<Window x:Class="_05_ColorCameraSettings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Orientation="Vertical">
        <GroupBox HorizontalAlignment="Left" VerticalAlignment="Top" Height="91" Width="200">
            <GroupBox.Header>
                <RadioButton Content="Auto Exposure Enable" GroupName="AutoExposure"/>
            </GroupBox.Header>
            
        </GroupBox>

        <GroupBox HorizontalAlignment="Left" VerticalAlignment="Top" Height="91" Width="200">
            <GroupBox.Header>
                <RadioButton Content="Auto Exposure Disable" GroupName="AutoExposure"/>
            </GroupBox.Header>
        </GroupBox>

    </StackPanel>
</Window>
